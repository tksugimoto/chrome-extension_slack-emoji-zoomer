{
	"name": "Slack",
	"version": "0.1.0",
	"manifest_version": 2,

	"description": "",

	"background": {
		"scripts": [
			"js/background.js"
		],
		"persistent": false
	},

	"content_scripts": [{
		"matches": [
			"https://*.slack.com/*"
		],
		"js": [
			// コピー時の文字装飾の改善
			"js/change-stringify-prefix-suffix.js",
			// ローカルファイルへのパスをリンクに変更
			"js/support_local_file_link.js"
		],
		"css": [
			// Slackのリアクションの絵文字アイコンを大きくする
			"css/zoom_emoji_icon.css"
		]
	}]
}
